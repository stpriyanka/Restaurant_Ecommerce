@model IEnumerable<Ecomerce_Restaurant.Models.FoodModels.FoodName>



<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalRatedPeople)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.FoodItemPicName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodRating)
            </td>
            <td>


                @Html.DisplayFor(modelItem => item.TotalRatedPeople)
            </td>
            <td>

                <img src="~/Images/@(item.FoodItemPicName)" height="70" width="70" />
            </td>
            <td>
                <div class="col-md-6">
                    <button class="btn btn-warning">
                        @Ajax.ActionLink("edit", "Edit", "FoodNames", new { id = item.ID }, new AjaxOptions
{
    UpdateTargetId = "createmenudiv",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "GET"
})
                    </button>
                </div>
            </td>
            <td>
                <button class="btn btn-danger">
                    @Ajax.ActionLink("Delete", "Delete", "FoodNames", new { id = item.ID }, new AjaxOptions
       {
           UpdateTargetId = "createmenudiv",
           InsertionMode = InsertionMode.Replace,
           HttpMethod = "GET"

       })
                </button>

            </td>
        </tr>
    }

</table>

