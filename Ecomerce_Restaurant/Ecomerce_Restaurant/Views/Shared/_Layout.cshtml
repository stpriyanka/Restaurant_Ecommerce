<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.STP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/Scripts/jquery-2.1.3.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")


    <style>
        h1 {
            text-align: center;
        }

        #map-canvas {
            height: 500px;
        }
    </style>

</head>
<body>
    <div class="jumbotron">
        <h1>Indian Restaurant</h1>
    </div>

    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>



            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a id="navHome" class="btn btn-group-justified" href="@Url.Action("Index", "Home")" role="button">HOME</a></li>
                    @*                    <li><a id="navAbout" class="btn btn-group-justified" href="@Url.Action("About", "Home")" role="button">ABOUT US</a></li>*@
                    @*<li><a id="navReservations" class="btn btn-group-justified" href="@Url.Action("AdminView", "Home")" role="button">Admin</a></li>*@
                    
                    <li><a id="navLocation" class="btn btn-group-justified" href="@Url.Action("Contact", "Home")" role="button">LOCATION</a></li>
                    @*@if (User.Identity.Name == "priyanka_tasnia@yahoo.com")
                        {*@
                    <li>@Html.ActionLink("CategoryAdmin", "Index", "FoodCategories")</li>
                    <li>@Html.ActionLink("Food-MenuAdmin", "Index", "FoodNames")</li>
                    @*}*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Customer Section<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Appetizers</a></li>
                            <li><a href="#">Soup, Salads & Sides</a></li>
                            <li><a href="#">Entrees</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Desserts</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("AdminView", "Home")" role="button">Food Menu</a></li>


                            @*  <li><a href=@Html.Action("FoodList", "Home", new { pageNumber = 1 })>Full Menu1</a>*@
                        </ul>
                    </li>

                    
                    @using (Html.BeginForm("SearchView", "Home"))
                    {

                        <form role="search" class="navbar-form navbar-left">
                            <div class="form-group">
                                <input type="text" name="searchvalue" placeholder="Search by category" class="form-control">
                            </div>
                        </form>
                    }


                </ul>
                @Html.Partial("_LoginPartial")
                

            </div>
        </div>
        <div>

            @*// enabled search option by category without bootstrap
            @using (Html.BeginForm("SearchView", "Home"))
            {
                <input type="text" name="searchvalue" value="search food menu by category" />
                <input type="submit" value="Search" />
            }*@


        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            @*@Html.Partial("SearchView")*@


        </div>
        <footer>
            @Html.Partial("_Footer");
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
