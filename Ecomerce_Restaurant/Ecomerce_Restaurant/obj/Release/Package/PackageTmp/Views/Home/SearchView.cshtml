@model IEnumerable<Ecomerce_Restaurant.Models.FoodModels.Food>

@{
	ViewBag.Title = "Search Result";
}

<div class="panel panel-default">
	<div class="panel-heading">
		<div class="container">
			<table class="table">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.FoodImageName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Name)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.CategoryName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.FoodDescription)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Price)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.FoodRating)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.RatingCount)
						</th>
						<th></th>
					</tr>
				</thead>
				@foreach (var item in Model)
				{
					<tr class="warning">
						<td>
							<img src="~/Images/@(item.FoodImageName)" height="50" width="50" />

						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CategoryName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FoodDescription)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Price)
						</td>
						<td>
							@*@Html.DisplayFor(modelItem => item.FoodRating)*@
							
							@{

								if (item.RatingCount != 0)
								{
									var p = item.FoodRating / item.RatingCount;
									<strong>@p.ToString("F1")</strong>
								}
								else
								{
									<strong>0</strong>
								}
							}
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.RatingCount)
						</td>
						</td>

					</tr>
				}

			</table>
		</div>
	</div>
</div>