<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="panel panel-primary">
				<div class="panel-heading" id="accordion">
					<span class="glyphicon glyphicon-comment"></span> Chat
					<div class="btn-group pull-right">
						<a type="button" onclick="chatVisibility()" class="btn btn-default btn-xs">
							<span class="glyphicon glyphicon-chevron-down"></span>
						</a>
					</div>
				</div>
				<div class="panel-collapse collapse"  id="collapseOne" style="display: block">
					<div class="panel-body">
						<ul class="chat">
							<li class="left clearfix">
								<div class="chat-body clearfix">
									<input type="hidden" id="displayname" />
									<ul id="discussion"></ul>
								</div>
							</li>
						</ul>
					</div>
					<div class="panel-footer">
						<div class="input-group">
							<input id="message" type="text" class="form-control input-sm" placeholder="Type message" />
							<span class="input-group-btn">
								<ibutton class="btn btn-default" id="sendmessage" value="Send"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></ibutton>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<script src="~/Scripts/CustomScript.js"></script>


